{
  "window.zoomLevel": -1,
  "editor": {
    "rulers": [72, 80],
    "fontFamily": "Monaco, Consolas, 'Courier New', monospace",
    "renderWhitespace": "all",
    "detectIndentation": false,
    "tabSize": 2,
    "insertSpaces": true,
  },
  // Python
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_django",
    "--django-settings-module=gemba.settings"
  ],
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--ignore=E501" // E501 - Try to make lines fit within --max-line-length characters.
  ],
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true
  },
  "[typescript, typescriptreact]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.pylint": false,
      "source.fixAll.stylelint": false,
      "source.fixAll.markdownlint": false,
      "source.fixAll.shellcheck": false,
      "source.fixAll.eslint": true,
    },
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "[css, scss]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.pylint": false,
      "source.fixAll.eslint": false,
      "source.fixAll.markdownlint": false,
      "source.fixAll.shellcheck": false,
      "source.fixAll.stylelint": true,
    },
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true,
  },
  "markdownlint.config": {
    "default": true,
    "MD024": { "siblings_only": true },
  },
  "[markdown]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.pylint": false,
      "source.fixAll.eslint": false,
      "source.fixAll.stylelint": false,
      "source.fixAll.shellcheck": false,
      "source.fixAll.markdownlint": true,
    },
  },
  "[sh, bash]": {
    "files.eol": "\n",
    "editor.insertSpaces": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.pylint": false,
      "source.fixAll.eslint": false,
      "source.fixAll.stylelint": false,
      "source.fixAll.markdownlint": false,
      "source.fixAll.shellcheck": true,
    },
  },
  "[powershell]": {
    "files.eol": "\n",
  },
  "[csharp]": {
    "editor.tabSize": 4,
  },
}